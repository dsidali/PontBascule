@page "/achats/create"
@using PontBascule.Data
@using PontBascule.Model.Models

@inject AchatsService AchatsCrud

<h3>Create</h3>

<EditForm Model="Book" OnValidSubmit=@AddBook>
    <div class="form-group">
        <label for="title">Title</label>
        <input type="text" class="form-control" id="title" @bind="Book.NumBonA" />
    </div>
    <div class="form-group">
        <label for="author">Author</label>
        <input type="text" class="form-control" id="author" @bind="Book.NumTicket" />
    </div>
    <div class="form-group">
        <label for="year">Year</label>
        <input type="number" class="form-control" id="year" @bind="Book.Transporteur" />
    </div>
    <button type="submit" class="btn btn-primary" >Submit</button>
    <button class="btn btn-secondary" @onclick="Cancel">Cancel</button>
</EditForm>

@code {
    private Achat Book { get; set; } = new Achat();

    private async Task AddBook()
    {
